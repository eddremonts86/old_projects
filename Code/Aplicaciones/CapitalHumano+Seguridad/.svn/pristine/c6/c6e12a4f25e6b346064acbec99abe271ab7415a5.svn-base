                { text: 'Marzo',flex: 3,
                    columns:[
                        { text: 'Fecha',width:100,dataIndex: 'salir3',editor: {allowBlank: false}},
                        { text: 'Cumplimiento',width:110, dataIndex: 'cmplid3',editor: {allowBlank: false}}
